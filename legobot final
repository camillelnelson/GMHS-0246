void turn_right(float degrees)
{cmpc(0);
    while (gmpc(0)<deg_var*degrees)
    {
     mav(0,500);
        mav(3,-500);
    } 
    mav(0,0);
        mav(3,0);
}

void turn_left(float degrees)
{cmpc(3);
    while (gmpc(3)<deg_var*degrees)
    {
     mav(0,500);
        mav(3,-500);
    } 
    mav(0,0);
        mav(3,0);
}

void forward(int distance)
{cmpc(0);
 while(gmpc(0)<distance*dis_var)
 {mav(0,500);
mav(3,500);
 }
mav(0,0);
mav(3,0);
}

