void turn_right(int degrees)
{cmpc(3);
 mav(0,-500);
 mav(3,500);
 msleep(degrees*25.66);
 mav(0,0);
 mav(3,0); 
}

void turn_left(int degrees)
{cmpc(3);
 mav(0,500);
 mav(3,-500);
 msleep(degrees*25.66);
 mav(0,0);
 mav(3,0);  
}

void forward(int distance)
{cmpc(0);
mav(0,500):
mav(3,500);
msleep(distance*dis_var); //distance in inches
mav(0,0);
mav(3,0);
}

void backwards(int distance)
{cmpc(3);
mav(0,-500);
mav(3,-500);
msleep(distance*dis_var); //distance in inches
mav(0,0);
mav(3,0);
}
