#include <kipr/wombat.h>

void turn_right (int degrees);
void turn_left (int degrees);  
void forward (int distance);
void backwards (int distance);

int main() {
mav(1,150);
msleep(2000); // lift and claw goes up for two seconds

mav(1,75);
msleep(4000); //lift and claw goes down for four seconds

mav(1,0); //motor stops

//start of game
turn_right(90);
forward(26); //find exact value for this, what direction do we want to approach wireshark and alarm from?
turn_left(90);

mav(1,150); /claw goes up to raise flip alarm
msleep(2000);
mav(1,0);

forward(13);
turn_left(90);

return 0;
}

void turn_right(int degrees)
{cmpc(3);
 mav(0,-500);
 mav(3,500);
 msleep(degrees*25.66);
 mav(0,0);
 mav(3,0); 
}

void turn_left(int degrees)
{cmpc(3);
 mav(0,500);
 mav(3,-500);
 msleep(degrees*25.66);
 mav(0,0);
 mav(3,0);  
}

void forward(int distance)
{cmpc(0);
mav(0,500):
mav(3,500);
msleep(distance*212.76); //distance in inches
mav(0,0);
mav(3,0);
}

void backwards(int distance)
{cmpc(3);
mav(0,-500);
mav(3,-500);
msleep(distance*212.76); //distance in inches
mav(0,0);
mav(3,0);
}
